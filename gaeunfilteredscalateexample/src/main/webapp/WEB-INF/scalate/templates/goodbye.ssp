<% attributes("title") = "This is a new goodbye page" %>

<%@ var name: String = null %>

#if (name ne null)
<h1>Goodbye, ${name}</h1>
#end

<form method="post" action="/goodbye" id="detailsForm">
  <fieldset>
    <legend>Your details</legend>
    <ol>
      <li>
        <label for="name">Name</label>
        <input id="name" name="name" type="text" placeholder="What's your name?" required autofocus>
      </li>
    </ol>
  </fieldset>
  <fieldset>
    <button type="submit">Say goodbye</button>
  </fieldset>
</form>
